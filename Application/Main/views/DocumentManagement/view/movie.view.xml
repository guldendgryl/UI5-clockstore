<mvc:View controllerName="SapUI5Tutorial.Application.Main.views.DocumentManagement.controller.movie" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:l="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.f" height="100%" 
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" 
    xmlns:grid="sap.ui.layout.cssgrid">

    <Page title="Centered Title" class="page" showNavButton="true" enableScrolling="false" showHeader="false">
        <content>
            <HBox class="content">
                <VBox class="left-content">
                    <VBox class="genre-box">
                        <Text class="text-title" text="Genre"/>
                        <Text class="text" text="Action"/>
                        <Text class="text" text="Harror"/>
                        <Text class="text" text="Comedy"/>
                        <Text class="text" text="Adventure"/>
                        <Text class="text" text="Drama"/>
                        <Text class="text" text="Sci-Fi"/>
                        <Text class="text" text="More..."/>
                    </VBox>

                    <VBox class="genre-box">
                        <Text class="text-title" text="Language"/>
                        <Text class="text" text="English"/>
                        <Text class="text" text="Hindi"/>
                        <Text class="text" text="Tamil"/>
                        <Text class="text" text="Telgu"/>
                        <Text class="text" text="Marathi"/>
                        <Text class="text" text="Punjabi"/>
                        <Text class="text" text="More..."/>
                    </VBox>
                </VBox>
                <FlexBox class="center-content">
                    <l:FixFlex class="fix-content-style">
                        <l:fixContent >

                            <Image src="{img>/products/pic1}" densityAware="true" />
                            <SearchField id="searchField" width="50%" placeholder="search for..." enableSuggestions="true" search="onSearch" suggest="onSuggest" suggestionItems="{path: '/ProductCollection', sorter: { path: 'Name' }}">
                                <suggestionItems>
                                    <SuggestionItem text="{Name}" description="{path:'Price'} {path:'CurrencyCode'}" key="{ProductId}"/>
                                </suggestionItems>
                            </SearchField>
                        </l:fixContent>
                        <l:flexContent>

                            <ScrollContainer height="100%" width="100%" horizontal="true" vertical="true" focusable="false">
                                <l:Grid  class="grid-style" defaultSpan="XL3 L4 M6 S12" hSpacing="0" vSpacing="0" content="{/movieModel}">
                                    <VBox>
                                        <Image src="{posterurl}" class="movie-size" press="NewDialogPress"></Image>
                                        <Link text="{title}" class="poster-title-style" press="NewDialogPress"/>
                                        <HBox>
                                            <core:Icon src="sap-icon://favorite" class="ratingicon-style"></core:Icon>
                                            <Text text="{imdbRating}" class="poster-rating-style"/>
                                        </HBox>
                                       
                                    </VBox>

                                    
                                </l:Grid>
                                <l:Grid defaultSpan="XL3 L4 M6 S12" hSpacing="0" vSpacing="0" content="{/firstmovies}">
                                    <VBox>
                                        <Image src="{posterurl}" class="movie-size" press="NewDialogPress"></Image>
                                        <Link text="{title}" class="poster-title-style" press="NewDialogPress"/>
                                        <HBox>
                                            <core:Icon src="sap-icon://favorite" class="ratingicon-style"></core:Icon>
                                            <Text text="{imdbRating}" class="poster-rating-style"/>
                                        </HBox>
                                    </VBox>
                                </l:Grid>

                            </ScrollContainer>


                        </l:flexContent>
                    </l:FixFlex>
                </FlexBox>
                <VBox class="right-content"></VBox>
            </HBox>
        </content>

    </Page>
</mvc:View>